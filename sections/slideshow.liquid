{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --slideshow-height: {{ section.settings.slide_height }}vh;
  }
  
  .slideshow__slide {
    min-height: var(--slideshow-height);
  }
{%- endstyle -%}

<slideshow-component class="slideshow banner banner--{{ section.settings.slide_height }}vh banner--content-align-{{ section.settings.desktop_content_alignment }}" role="region" aria-roledescription="{{ 'sections.slideshow.carousel' | t }}" aria-label="{{ section.settings.accessibility_info | escape }}">
  {%- if section.settings.auto_rotate and section.blocks.size > 1 -%}
    <div class="slideshow__controls slideshow__controls--top center" data-slideshow-controls="hover">
      <button class="slideshow__autoplay slider-button" type="button" aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}">
        {%- render 'icon-pause' -%}
        {%- render 'icon-play' -%}
      </button>
    </div>
  {%- endif -%}

  <div class="slideshow__slides slider" id="Slider-{{ section.id }}">
    {%- for block in section.blocks -%}
      <div class="slideshow__slide slider__slide{% if forloop.first %} is-active{% endif %}" id="Slide-{{ section.id }}-{{ forloop.index }}" role="group" aria-roledescription="{{ 'sections.slideshow.slide' | t }}" aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}" {{ block.shopify_attributes }}>
        <div class="slideshow__media">
          {%- if block.settings.image != blank -%}
            {%- assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio -%}
            {{ block.settings.image | image_url: width: 3840 | image_tag:
              loading: 'lazy',
              width: block.settings.image.width,
              height: image_height,
              sizes: '100vw',
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
              class: 'slideshow__image'
            }}
          {%- else -%}
            {{ 'lifestyle-2' | placeholder_svg_tag: 'slideshow__image placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="slideshow__text-wrapper banner__content banner__content--{{ section.settings.desktop_content_position }} page-width">
          <div class="slideshow__text banner__box content-container content-container--full-width-mobile color-{{ block.settings.color_scheme }} gradient">
            {%- if block.settings.heading != blank -%}
              <h2 class="banner__heading {{ block.settings.heading_size }}">
                {{ block.settings.heading }}
              </h2>
            {%- endif -%}
            {%- if block.settings.subheading != blank -%}
              <div class="banner__text rte">
                {{ block.settings.subheading }}
              </div>
            {%- endif -%}
            {%- if block.settings.button_label != blank -%}
              <div class="banner__buttons">
                <a{% if block.settings.link != blank %} href="{{ block.settings.link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">
                  {{ block.settings.button_label | escape }}
                </a>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <div class="slider-buttons no-js-hidden">
      <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}" aria-controls="Slider-{{ section.id }}">
        {% render 'icon-caret' %}
      </button>
      <div class="slider-counter slider-counter--dots">
        <div class="slideshow__control-wrapper">
          {%- for block in section.blocks -%}
            <button class="slider-counter__link slider-counter__link--dots link" aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}" aria-controls="Slider-{{ section.id }}">
              <span class="dot{% if forloop.first %} is-active{% endif %}"></span>
            </button>
          {%- endfor -%}
        </div>
      </div>
      <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}" aria-controls="Slider-{{ section.id }}">
        {% render 'icon-caret' %}
      </button>
    </div>
  {%- endif -%}
</slideshow-component>

{% schema %}
{
  "name": "t:sections.slideshow.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "slide_height",
      "options": [
        { "value": "100", "label": "t:sections.slideshow.settings.slide_height.options__1.label" },
        { "value": "80", "label": "t:sections.slideshow.settings.slide_height.options__2.label" },
        { "value": "60", "label": "t:sections.slideshow.settings.slide_height.options__3.label" }
      ],
      "default": "100",
      "label": "t:sections.slideshow.settings.slide_height.label"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        { "value": "top-left", "label": "t:sections.slideshow.settings.desktop_content_position.options__1.label" },
        { "value": "top-center", "label": "t:sections.slideshow.settings.desktop_content_position.options__2.label" },
        { "value": "top-right", "label": "t:sections.slideshow.settings.desktop_content_position.options__3.label" },
        { "value": "middle-left", "label": "t:sections.slideshow.settings.desktop_content_position.options__4.label" },
        { "value": "middle-center", "label": "t:sections.slideshow.settings.desktop_content_position.options__5.label" },
        { "value": "middle-right", "label": "t:sections.slideshow.settings.desktop_content_position.options__6.label" },
        { "value": "bottom-left", "label": "t:sections.slideshow.settings.desktop_content_position.options__7.label" },
        { "value": "bottom-center", "label": "t:sections.slideshow.settings.desktop_content_position.options__8.label" },
        { "value": "bottom-right", "label": "t:sections.slideshow.settings.desktop_content_position.options__9.label" }
      ],
      "default": "middle-center",
      "label": "t:sections.slideshow.settings.desktop_content_position.label"
    },
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        { "value": "left", "label": "t:sections.slideshow.settings.desktop_content_alignment.options__1.label" },
        { "value": "center", "label": "t:sections.slideshow.settings.desktop_content_alignment.options__2.label" },
        { "value": "right", "label": "t:sections.slideshow.settings.desktop_content_alignment.options__3.label" }
      ],
      "default": "center",
      "label": "t:sections.slideshow.settings.desktop_content_alignment.label"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:sections.slideshow.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.slideshow.settings.change_slides_speed.label",
      "default": 5
    },
    {
      "type": "text",
      "id": "accessibility_info",
      "label": "t:sections.slideshow.settings.accessibility.label",
      "default": "Slideshow about our brand"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.slideshow.blocks.slide.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.slideshow.blocks.slide.settings.image.label"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Image slide",
          "label": "t:sections.slideshow.blocks.slide.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            { "value": "h2", "label": "t:sections.all.heading_size.options__1.label" },
            { "value": "h1", "label": "t:sections.all.heading_size.options__2.label" },
            { "value": "h0", "label": "t:sections.all.heading_size.options__3.label" }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
        },
        {
          "type": "richtext",
          "id": "subheading",
          "default": "<p>Tell your brand's story through images</p>",
          "label": "t:sections.slideshow.blocks.slide.settings.subheading.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.slideshow.blocks.slide.settings.button_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.slideshow.blocks.slide.settings.link.label"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "t:sections.slideshow.blocks.slide.settings.secondary_style.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.slideshow.presets.name",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
