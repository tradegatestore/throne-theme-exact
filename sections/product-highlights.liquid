<div class="product-highlights" data-section-id="{{ section.id }}">
  <div class="product-highlights__container page-width">
    <div class="product-highlights__header">
      <h2 class="product-highlights__heading">
        {{ section.settings.heading }}
        <span class="highlight-text">{{ section.settings.heading_highlight }}</span>
      </h2>
      {%- if section.settings.subheading != blank -%}
        <p class="product-highlights__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>
    
    <div class="product-highlights__grid">
      {%- if section.settings.collection != blank -%}
        {%- for product in section.settings.collection.products limit: 4 -%}
          <div class="product-card" data-aos="fade-up" data-aos-delay="{{ forloop.index | times: 100 }}">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image-wrapper">
                {%- if product.featured_image != blank -%}
                  <img src="{{ product.featured_image | image_url: width: 600 }}" 
                       alt="{{ product.featured_image.alt | escape }}" 
                       class="product-card__image" loading="lazy">
                {%- else -%}
                  <div class="product-card__placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>
                <div class="product-card__price">
                  {%- if product.compare_at_price > product.price -%}
                    <span class="price--sale">{{ product.price | money }}</span>
                    <span class="price--compare">{{ product.compare_at_price | money }}</span>
                  {%- else -%}
                    <span class="price">{{ product.price | money }}</span>
                  {%- endif -%}
                </div>
              </div>
            </a>
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..4) -%}
          <div class="product-card product-card--placeholder">
            <div class="product-card__image-wrapper">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="product-card__info">
              <h3 class="product-card__title">Product Title</h3>
              <div class="product-card__price">
                <span class="price">$99.00</span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>

<style>
.product-highlights { padding: 80px 0; background: var(--color-background); }
.product-highlights__container { max-width: 1400px; margin: 0 auto; padding: 0 20px; }
.product-highlights__header { text-align: center; margin-bottom: 60px; }
.product-highlights__heading { font-size: clamp(2rem, 5vw, 3.5rem); font-weight: 700; margin: 0; line-height: 1.2; }
.highlight-text { color: var(--color-accent, #c8f542); display: block; }
.product-highlights__subheading { font-size: 1.1rem; color: var(--color-text-muted); max-width: 600px; margin: 20px auto 0; }
.product-highlights__grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 30px; }
.product-card { position: relative; overflow: hidden; border-radius: 12px; background: var(--color-card-bg, #1a1a1a); transition: transform 0.4s ease, box-shadow 0.4s ease; }
.product-card:hover { transform: translateY(-8px); box-shadow: 0 20px 40px rgba(0,0,0,0.3); }
.product-card__image-wrapper { position: relative; padding-top: 120%; overflow: hidden; }
.product-card__image { position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; transition: transform 0.6s ease; }
.product-card:hover .product-card__image { transform: scale(1.08); }
.product-card__info { padding: 20px; }
.product-card__title { font-size: 1rem; font-weight: 600; margin: 0 0 10px; }
.product-card__price { font-size: 1.1rem; font-weight: 700; }
.price--sale { color: var(--color-accent, #c8f542); }
.price--compare { text-decoration: line-through; color: var(--color-text-muted); margin-left: 8px; font-size: 0.9rem; }
@media (max-width: 1024px) { .product-highlights__grid { grid-template-columns: repeat(2, 1fr); } }
@media (max-width: 600px) { .product-highlights__grid { grid-template-columns: 1fr; } .product-highlights { padding: 50px 0; } }
</style>

{% schema %}
{
  "name": "Product Highlights",
  "tag": "section",
  "class": "product-highlights-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tech You'll"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Heading Highlight",
      "default": "Truly Love"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Upgrade every day with connected devices delivering effortless performance."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Product Highlights"
    }
  ]
}
{% endschema %}
